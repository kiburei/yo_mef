<p id="notice"><%= notice %></p>

<div class="row">
  <% @blogs.each do |blog| %>
     <div class="col s12 m3">
       <div class="card">
         <div class="card-image">
           <%= image_tag 'bg' %>
           <span class="card-title"><%= blog.title %></span>
         </div>
         <div class="card-content">
           <p><%= blog.content %></p>
         </div>
         <div class="card-action">
           <a href="#">Read More</a>
         </div>
       </div>
     </div>
  <% end %>
</div>
<%= link_to 'New Blog', new_blog_path %>
